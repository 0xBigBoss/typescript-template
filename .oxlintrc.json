{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "pedantic": "off",
    "perf": "warn",
    "style": "off",
    "restriction": "off",
    "nursery": "off"
  },
  "rules": {
    "no-unused-vars": "error",
    "no-console": "warn",
    "eqeqeq": "error",
    "no-var": "error",
    "prefer-const": "error"
  },
  "plugins": ["typescript", "import", "promise", "unicorn"],
  "ignorePatterns": ["node_modules", "**/dist", "build", "coverage", "*.d.ts"],
  "env": {
    "browser": true,
    "node": true,
    "es2022": true
  },
  "overrides": [
    {
      "files": ["scripts/**/*", "apps/**/*"],
      "rules": {
        "no-console": "off"
      }
    }
  ]
}
